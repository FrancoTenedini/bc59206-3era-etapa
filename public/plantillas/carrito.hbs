    <div class="containerTable">
    <table class="carrito-table">
        <tr class="carrito-table__tr1">
            {{!-- <th class="carrito-table__tr1--foto">Foto</th>
            <th class="carrito-table__tr1--nombre">Nombre</th>
            <th class="carrito-table__tr1--marca">Marca</th>
            <th class="carrito-table__tr1--cantidad">Cantidad</th>
            <th class="carrito-table__tr1--envio">Envio</th>
            <th class="carrito-table__tr1--precio">Precio</th>
            <th class="carrito-table__tr1--accion">Acción</th> --}}
        </tr>
        {{#each carrito}}
        
        <tr class="carrito-table__tr2"> 

            <td class="carrito-table__tr2--foto">
                <img class="carrito-table__tr2--foto__img" src="{{imagen}}"  alt="{{nombre}}">
            </td>
            <td class="carrito-table__tr2__descripcion">
                <div class="carrito-table__tr2__descripcion--nombre">{{nombre}}</div>
                <div class="carrito-table__tr2__descripcion--marca">{{marca}}</div> 
            </td>
            <td>
            <div class="carrito-table__tr2--precio">{{precio}}$</div>
            {{#if envio}}
                <div class="carrito-table__tr2--envio">Envio: Si</div>
            {{else}}
                <div class="carrito-table__tr2--envio">Envio: No</div>
            {{/if}}
            </td>
             
            <td class="carrito-table__tr2__acciones">
                <div class="carrito-table__tr2__acciones--cantidad">Cantidad: {{cantidad}}</div>
                <button class="carrito-table__tr2__acciones--borrar" onclick="carritoController.borrarProductoCarrito('{{id}}')">borrar</button>
            </td>
        </tr>
         {{/each}}
    </table>
    </div>
